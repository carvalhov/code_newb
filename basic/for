#include <iostream>
using namespace std;

int main(){
  const int num = 20;
	for(int i = 1; i <= num ; i++){
	cout << " " << i;
}
}


#include<stdio.h>

int main (){
int i;
for(int i = 0; i < 6; i++){
	if(i == 2){
		break; // Ou continue 
    /*Se continue, o valor 2 será ignorado na saída, se
     utilzar "Break", a repetição será quebrada no 2 */
	}
	printf("%d\n", i);
}
}

out para break: 
0
1 
Out para continue:
0 
1 
3 
4 
5 
6


