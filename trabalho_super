void produtos(int qtdtot){
int op = 0;
cout << "1 - cadastro de produtos" << endl;
cout << "2 - saida de produtos" << endl;
cout << "3 - conferir o estoque de produtos" << endl;
cin >> op;
 switch (op){
 case 1:
 struct REGprodutos;
 cout << "Digite o código: "; cin >> codigo;
 cout << "nome: "; cin >> nome[10];
 cout << "quantidade: "; cin >> quantidade;
 cout << "Data de Fabricação: "; cin >> dataf;
 cout << "Data de validade: "; cin >> datav;
 qtdtot = qtdtot + quantidade;
 break;
 case 2:
 cout << "Digite o codigo do produto: "; cin >> codigo;
 cout << nome << endl;
 cout << "Digite a quanidade de saída: "; cin >> quantidade;
 cout << "Data de Fabricação: "; cin >> dataf;
 cout << "Data de validade: "; cin >> datav;
 qtdtot = qtdtot - quantidade;
 break;
  case 3:
 cout << "Digite o codigo do produto: "; cin >> codigo;
 cout << "Nome: " << codigo.nome << endl;
 cout << "Qantidade: " << qtdtot;
 cout << "Data de Fabricação: " << codigo.dataf;
 cout << "Data de validade: " << codigo.datav;
 break;
 
 default:
 cout << "Operação inexistente" << endl;
 break;
 }
}
