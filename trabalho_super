#include <iostream>
 
using namespace std;
 
struct REGprodutos{
 int codigo; /*1, 2, 3, 4 e 5*/
 char nome[10];
 float preco;
 int quantidade;
 char dataf;
 char datav;
};
 
struct REGfuncionarios{
 char nome [50];
 int idade;
 char sexo;
 float salario;
 char registro; /*CPF*/
};
 
struct REGcaixa{
 float caixadisp;
 float venda;
 float saida;
 float lucro;
};
 
float caixadisp = 15000;
int cadastrar(); 

void produtos();
 
int pessoal();
 
int caixa();
 
int main (void){
 int op = 0;
 while(op != 3){
 cout << "\n\n              SUPERMIXER - SORTIDOS\n\n"  << endl;
 cout << "Sistema de gerenciamento  - 2020" << endl;
 cout << "1 - Configuração Estoque de produtos " << endl;
 cout << "2 - Área de funcionário " << endl;
 cout << "3 - Consultar saldos do caixa" << endl;
 cout << "4 - Sair" << endl;
 cin >> op;
 system("clear");
 
     switch(op){
       case 1: 
       int qtproduto;
       qtproduto = cadastrar(); 
       break;
 
       case 2:
       int pessoa;
       pessoa = pessoal();

       break;
 
       case 3:
       int z;
       z = caixa();
       break;
 
       default:
       cout << "operação inexistente, obrigado por usar nossos serviços" << endl;
       break;
     }
 }
 system ("pause");
 return 0;
}
 
int cadastrar() {
  system("clear");
REGprodutos produtos;
int op = 0;
cout << "1 - cadastro de produtos" << endl;
cout << "2 - saida de produtos" << endl;
cout << "3 - conferir o estoque de produtos" << endl;
cin >> op;
 switch (op){
 case 1:
 cout << "Digite o código: ";
 cin >> produtos.codigo;
 cout << "nome: ";
 cin >> produtos.nome;
 cout << "quantidade: ";
 cin >> produtos.quantidade;
 cout << "Preço: ";  
 cin >> produtos.preco; 
 cout << "Data de Fabricação: ";
 cin >> produtos.dataf;
 cout << "Data de validade: "; 
 cin >> produtos.datav;
 caixadisp = caixadisp - produtos.preco*produtos.quantidade;
 cout << "Despesas: " << produtos.preco*produtos.quantidade << endl;

 cout << "caixa disponível: " << caixadisp;   
 break;
 case 2:
 cout << "Digite o codigo do produto: "; cin >> produtos.codigo;
 cout << produtos.nome << endl;
 cout << "Digite a quanidade de saída: "; cin >> produtos.quantidade;
 cout << "Preço: ";  
 cin >> produtos.preco; 
 cout << "Data de Fabricação: "; cin >> produtos.dataf;
 cout << "Data de validade: "; cin >> produtos.datav;
 caixadisp = caixadisp + (produtos.preco*produtos.quantidade);
 cout <<"Receita: " << produtos.preco*produtos.quantidade << endl;
 cout <<"Caixa disponível: " << caixadisp << endl ; 
 break;
  case 3:
 cout << "Digite o codigo do produto: "; cin >> produtos.codigo;
 cout << "Nome: " << produtos.nome << endl;
 cout << "Qantidade: " << produtos.quantidade;
 cout << "Data de Fabricação: " << produtos.dataf;
 cout << "Data de validade: " << produtos.datav;
 break;
 
 default:
 cout << "Operação inexistente" << endl;
 break;
  }
}


int pessoal() {
  system("clear");

  REGfuncionarios funcionarios;
  cout << "CADASTRAR FUNCIONARIOS: " << endl;
  cout << "Nome do funcionario: \n" ; cin >> funcionarios.nome;
  cout << "Idade\n" ; cin >> funcionarios.idade; 
  cout << "Qual o gênero(M OU F): " << endl;
  cin >> funcionarios.sexo;
  cout << "Defina o salario: \n" ; cin >>  funcionarios.salario;
  cout << "Número do cadatro pessoal: " << endl;
  cin >> funcionarios.registro;
}

int caixa(){
    REGcaixa caixa;
    cout << "Caixa disponível: " << caixadisp << endl;
    cout << "Receita: " << endl; cin >> caixa.venda;
    cout << "Despesas: " << endl; cin >> caixa.saida;
    caixa.lucro =  caixa.venda - caixa.saida;
    cout << "Lucro = "<< caixa.lucro << endl; /*Caso seja negativo é prejuízo*/
    }
